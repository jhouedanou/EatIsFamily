# ============================================
# EatIsFamily - Environment Configuration
# ============================================
# Copy this file to .env and adjust values for your environment

# ===================
# API Configuration
# ===================

# API Base URL - WordPress REST API endpoint
# For local development with Docker:
# NUXT_PUBLIC_API_BASE=http://localhost:8080/wp-json/eatisfamily/v1

# For production (current):
NUXT_PUBLIC_API_BASE=https://www.eatisfamily.fr/api/wp-json/eatisfamily/v1

# Use local JSON files as fallback when API is unavailable
NUXT_PUBLIC_USE_LOCAL_FALLBACK=true

# ===================
# WordPress Local (Docker)
# ===================
WORDPRESS_DB_HOST=db:3306
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=wordpress_password
WORDPRESS_DB_NAME=eatisfamily_db

# MySQL
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=eatisfamily_db
MYSQL_USER=wordpress
MYSQL_PASSWORD=wordpress_password

# ===================
# Development Settings
# ===================
NODE_ENV=development

# Enable debug mode
DEBUG=true
