# EatIsFamily WordPress Theme - Security Rules
# Only whitelist specific mod_security rules that cause false positives
# SECURITY: Never disable the entire WAF engine

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Allow WordPress admin access
    RewriteCond %{REQUEST_URI} ^/wp-admin/ [NC]
    RewriteRule .* - [L]
</IfModule>

# Whitelist specific mod_security rules that cause 403 on admin forms
# Do NOT disable the entire engine â€” it protects against SQL injection and XSS
<IfModule mod_security2.c>
    SecRuleRemoveById 300015
    SecRuleRemoveById 300016
    SecRuleRemoveById 300017
    SecRuleRemoveById 950109
    SecRuleRemoveById 950901
    SecRuleRemoveById 981173
</IfModule>
